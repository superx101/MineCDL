{
  "compilerOptions": {
    "target": "ES2016",
    "experimentalDecorators": true,
    "module": "commonjs",
    "rootDir": "./src",
    // "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*"]
}
